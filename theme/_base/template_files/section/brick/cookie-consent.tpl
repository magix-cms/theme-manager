<div id="cookies" class="alert alert-success alert-dismissible fade in hide" role="alert">
    <p class="pull-left">
        <span class="fa fa-info-circle"></span><strong>Cookies:</strong> {#cookie_text#} <a href="{#cookie_page#}" class="targetblank bold-link">{#read_more#|ucfirst}</a>
    </p>
    <button type="button" class="btn btn-success pull-right" onclick="C.createCookie(C.cookieName, C.cookieValue, C.cookieDuration)" data-dismiss="alert" aria-label="Close">{#continue#|ucfirst}</button>
</div>